				<firstStatus>
					<ObjectStatus text="Total Seats: {MaxSeats}" id="__status0"/>
				</firstStatus>
				<secondStatus> 
					<ObjectStatus text="{Type}" id="__status1"/>
				</secondStatus>
			</ObjectHeader>
 
			<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding" select="onTabSelect">
