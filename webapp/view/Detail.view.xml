								<sap.ui.layout.form:content xmlns:sap.ui.layout.form="sap.ui.layout.form">
									<sap.ui.core:Title xmlns:sap.ui.core="sap.ui.core" text="Trainer Information:" id="__title1"/>
									<Label text="Name" id="__label21"/>
									<Input width="100%" id="__input3" value="{/Trainers/FirstName}" editable="false"/>
									<Input width="100%" id="__input4" value="{/Trainers/LastName}" editable="false"/>
									<Label text="Title" id="__label3"/>
									<Input width="100%" id="__input5" value="{/Trainers/Title}" editable="false"/></sap.ui.layout.form:content>
